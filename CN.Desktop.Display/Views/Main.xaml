<Window x:Class="CN.Desktop.Display.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CN.Desktop.Display"
        xmlns:vm="clr-namespace:CN.Desktop.Display.Viewmodels"
        mc:Ignorable="d"
        Title="Courier Notifications Display Server" Height="450" Width="800"
        >
    <Window.Resources>
        <DataTemplate x:Key="messageTemplate">
            <Border BorderThickness="0,1,0,0"  Background="{Binding Backcolor}" Padding="5" BorderBrush="#30000000">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Button Content="{Binding ButtonText}" Command="{Binding ClickCommand}"  Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Center" Width="75" Margin="5,0" Padding="10,5" VerticalAlignment="Stretch" FontSize="11" UseLayoutRounding="False" Background="{Binding Backcolor}"/>

                    <TextBlock Text="{Binding Info}" HorizontalAlignment="Left" Grid.Column="1" FontSize="8" Foreground="#CC000000"/>

                    <TextBlock Text="{Binding Text}" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid
        RenderOptions.ClearTypeHint="Auto"
        TextOptions.TextHintingMode="Fixed"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="ConfigBtn" Content="Configurações" Padding="10,3" Margin="5" HorizontalAlignment="Right" FontSize="10" Click="ConfigBtn_Click"/>
            <Label Content="Aguardando conexão com o servidor" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="10"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Source={x:Static vm:MessagesViewmodel.Messages}}" ItemTemplate="{StaticResource messageTemplate}"/>
        </ScrollViewer>
    </Grid>
</Window>
