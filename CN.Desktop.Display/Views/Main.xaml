<Window x:Class="CN.Desktop.Display.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CN.Desktop.Display"
        mc:Ignorable="d"
        Title="Courier Notifications Display Server" Height="450" Width="800"
        >
    <Grid
        RenderOptions.ClearTypeHint="Auto"
        TextOptions.TextHintingMode="Fixed"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Button x:Name="ConfigBtn" Content="Configurações" Padding="10,3" Margin="5" HorizontalAlignment="Right" FontSize="10" Click="ConfigBtn_Click"/>
            <Label Content="Aguardando conexão com o servidor" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="10"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <DataTemplate>
                <Border Grid.RowSpan="2" Grid.ColumnSpan="2" BorderThickness="0,1,0,0"  Padding="5" BorderBrush="#30000000">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Button Content="Cancelar" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Center" Width="80" Margin="5,0" Padding="10,5" VerticalAlignment="Stretch" FontSize="11"/>

                        <TextBlock Text="22/12/2022 - 22:59:59 - Leonardo Bottaro" HorizontalAlignment="Left" Grid.Column="1" FontSize="8" Foreground="#CC000000"/>

                        <TextBlock Text="Responsável por Jaime, 6 anos, 6288, Favor comparecer ao CasaKids" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ScrollViewer>
    </Grid>
</Window>
