<Window x:Class="CN.Desktop.Display.Views.ChannelSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CN.Desktop.Display.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title=""
        MinHeight="700"
        MinWidth="500"
        Height="700"
        Width="500">

  <Window.Resources>
    <DataTemplate x:Key="Field">
      <TabItem Header="Campo 1"
               IsTabStop="False">

        <Grid Margin="10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
          </Grid.RowDefinitions>

          <Button Grid.Row="0"
                  Grid.RowSpan="3"
                  Panel.ZIndex="1"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Style="{StaticResource MaterialDesignOutlinedButton}">
            <materialDesign:PackIcon Kind="Delete" />
          </Button>

          <TextBlock Grid.Row="0"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Left"
                     Text="Propriedades do campo 1"
                     Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
          <TextBox Grid.Row="1"
                   materialDesign:HintAssist.Hint="Nome do campo"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <CheckBox Grid.Row="2"
                    HorizontalAlignment="Left"
                    Content="Somente números" />

          <TextBlock Grid.Row="3"
                     Text="Texto Principal"
                     VerticalAlignment="Bottom"
                     Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
          <TextBox Grid.Row="4"
                   materialDesign:HintAssist.Hint="Regex de Validação"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Grid.Row="5"
                   materialDesign:HintAssist.Hint="Texto antes do campo"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Grid.Row="6"
                   materialDesign:HintAssist.Hint="Texto depois do campo"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

          <TextBlock Grid.Row="7"
                     Text="Texto Alternativo"
                     VerticalAlignment="Bottom"
                     Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
          <TextBox Grid.Row="8"
                   materialDesign:HintAssist.Hint="Regex de texto alternativo"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Grid.Row="9"
                   materialDesign:HintAssist.Hint="Texto alternativo antes do campo"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
          <TextBox Grid.Row="10"
                   materialDesign:HintAssist.Hint="Texto alternativo depois do campo"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        </Grid>
      </TabItem>
    </DataTemplate>
  </Window.Resources>

  <Grid ClipToBounds="False">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="1*" />
    </Grid.RowDefinitions>

    <materialDesign:ColorZone materialDesign:ElevationAssist.Elevation="Dp6"
                              Mode="PrimaryDark">

      <Grid Margin="10">
        <StackPanel>
          <TextBlock Margin="20,0,0,0"
                     Text="Novo Canal"
                     Style="{StaticResource MaterialDesignHeadline4TextBlock}" />
          <TextBlock Margin="20,0,0,0"
                     Text="ID: Crie o canal para saber"
                     Style="{StaticResource MaterialDesignCharacterCounterTextBlock}" />
        </StackPanel>

        <Button x:Name="Confirm"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}"
                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="False"
                materialDesign:ButtonProgressAssist.Value="-1"
                ToolTip="Confirmar">
          <materialDesign:PackIcon Kind="Check" />
        </Button>
      </Grid>
    </materialDesign:ColorZone>

    <Grid Grid.Row="1"
          Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="1*" />
      </Grid.RowDefinitions>

      <materialDesign:Card Grid.Row="0"
                           UniformCornerRadius="10"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           materialDesign:ElevationAssist.Elevation="Dp4">
        <StackPanel Orientation="Vertical"
                    Margin="10,2,10,10">
          <TextBox Grid.Row="0"
                   materialDesign:HintAssist.Hint="Nome do Canal"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}">
          </TextBox>
          <TextBox Grid.Row="0"
                   materialDesign:HintAssist.Hint="Descrição"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        </StackPanel>
      </materialDesign:Card>

      <materialDesign:Card Grid.Row="1"
                           Margin="0,10,0,0"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           UniformCornerRadius="10"
                           materialDesign:ElevationAssist.Elevation="Dp4">
        <TabControl IsTabStop="False"
                    Style="{StaticResource MaterialDesignFilledTabControl}"
                    TabStripPlacement="Left">

        </TabControl>
      </materialDesign:Card>
    </Grid>
  </Grid>
</Window>
